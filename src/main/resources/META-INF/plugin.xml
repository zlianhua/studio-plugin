<idea-plugin>
    <id>com.ai.abc.studio-plugin</id>
    <name>component</name>
    <vendor email="zhanglh2@asiainfo.com" url="http://www.asiainfo.com">Asiainfo</vendor>

    <description>component maintain tool,like create, update, delete entities</description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="com.ai.abc.studio.plugin.action.NewComponentAction" class="com.ai.abc.studio.plugin.action.NewComponentAction" text="New Component"
                description="new business component">
            <add-to-group group-id="NewProjectOrModuleGroup" anchor="first"/>
        </action>
        <action id="com.ai.abc.studio.plugin.action.NewSingleRootEntityAction" class="com.ai.abc.studio.plugin.action.NewSingleRootEntityAction" text="新建根对象" description="新建根对象">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="first" />
        </action>
        <action id="com.ai.abc.studio.plugin.action.NewSingleValueEntityAction" class="com.ai.abc.studio.plugin.action.NewSingleValueEntityAction" text="新建值对象成员" description="新建值对象成员">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="first" />
        </action>
        <action id="com.ai.abc.studio.plugin.action.NewSingleEntityAction" class="com.ai.abc.studio.plugin.action.NewSingleEntityAction" text="新建实体对象成员" description="新建实体对象成员">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="first" />
        </action>
        <action id="com.ai.abc.studio.plugin.action.NewRootRepositoryAction" class="com.ai.abc.studio.plugin.action.NewRootRepositoryAction" text="新建Repository对象" description="新建Repository对象">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="first" />
        </action>
    </actions>
</idea-plugin>